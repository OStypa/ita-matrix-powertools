{
  "name": "ita-matrix-powertools",
  "version": "0.42.6",
  "description": "Adds new features and builds fare purchase links for ITA Matrix",
  "main": "ita-matrix-powertools.user.js",
  "scripts": {
    "authors": "bash scripts/authors.sh",
    "prettier": "pretty-quick --staged",
    "type-check": "tsc",
    "build": "webpack && npm run minify",
    "minify": "uglifyjs ita-matrix-powertools.user.js -o script_minified.js",
    "version": "npm run build && git add ita-matrix-powertools.user.js script_minified.js",
    "package:webext": "node scripts/package.webext.js",
    "release": "npm run release:chrome && npm run release:firefox",
    "release:chrome": "webstore upload --source dist/ita-matrix-powertools.webext.zip --auto-publish",
    "release:firefox": "node scripts/deploy.amo.js"
  },
  "dependencies": {
    "@types/greasemonkey": "^4.0.0",
    "@types/webpack-env": "^1.15.0",
    "archiver": "^3.1.1",
    "chrome-webstore-upload-cli": "^1.2.0",
    "firefox-extension-deploy": "^1.1.2",
    "husky": "^4.2.1",
    "path": "^0.12.7",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "typescript": "^3.7.5",
    "uglify-es": "^3.3.9",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier"
    }
  }
}
